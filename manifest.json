{
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "description": "Lets you upload a WhatsApp chat export and prints that in a more readable way then the raw format.",
    "icons": {
        "16": "images/icons8-whatsapp-16.png",
        "32": "images/icons8-whatsapp-32.png",
        "48": "images/icons8-whatsapp-48.png",
        "128": "images/icons8-whatsapp-128.png"
    },
    "manifest_version": 2,
    "name": "WhatsApp Chat Export Reader",
    "options_page": "options.html",
    "page_action": {
        "default_icon": {
            "16": "images/icons8-whatsapp-16.png",
            "32": "images/icons8-whatsapp-32.png",
            "48": "images/icons8-whatsapp-48.png",
            "128": "images/icons8-whatsapp-128.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        {
            "fileSystem": [
                "write"
            ]
        }
    ],
    "version": "1.0"
}